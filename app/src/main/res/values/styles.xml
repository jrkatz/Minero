<resources>
    <!--Theme for a DebitListView-->
    <declare-styleable name="DebitListViewTheme">
        <attr name="debitListViewStyle" format="reference"/>
    </declare-styleable>
    <style name="Theme.Minero" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="debitListViewStyle">@style/DebitListView</item>
    </style>
    <style name="DebitListView" parent="@style/Widget.AppCompat.ListView">
        <item name="android:stackFromBottom">true</item>
        <item name="android:transcriptMode">alwaysScroll</item>
    </style>
</resources>
