<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lander"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.jrkatz.minero.Lander">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--
        <item android:id="@+id/action_settings"
            android:title="Settings"
            android:showAsAction="never"
            />
            -->
    </android.support.v7.widget.Toolbar>

    <EditText
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/spend"
        android:selectAllOnFocus="true"
        android:imeOptions="actionDone"
        android:id="@+id/spend_amt"/>

    <net.jrkatz.minero.BudgetPeriodView
        android:layout_below="@id/toolbar"
        android:layout_above="@id/spend_amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/budget_period"/>
</RelativeLayout>